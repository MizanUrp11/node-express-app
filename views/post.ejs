<!DOCTYPE html>
<html lang="en">
<%- include('layouts/head'); -%>

<body>

  <!-- Navigation -->
<%- include('layouts/navbar'); -%>

  <!-- Page Header -->
  <header class="masthead" style="background-image: url('<%= blogpost.image %>')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="post-heading">
            <h1><%- blogpost.title %></h1>
            <h2 class="subheading"><%- blogpost.body %></h2>
            <span class="meta">Posted by
              <a href="#">Start Bootstrap</a>
              on <%- blogpost.datePosted.toDateString(); %></span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Post Content -->
  
<div class="container">
  <div class="row">
    <div class="col-lg-8 col-md-10 mx-auto">
      <form action="/post/store" enctype="multipart/form-data" method="POST">
        <div class="control-group">
          <div class="form-group floating-label-form-group controls">
            <label>Title</label>
            <input type="text" class="form-control" placeholder="Enter Title" id="title" required
              data-validation-required-message="Please enter your name.">
            <p class="help-block text-danger"></p>
          </div>
        </div>
        <div class="control-group">
          <div class="form-group floating-label-form-group controls">
            <label for="message">Post Body</label>
            <textarea rows="5" class="form-control" placeholder="Message" id="message" required
              data-validation-required-message="Please enter message body."></textarea>
            <p class="help-block text-danger"></p>
          </div>
        </div>
        <br>
        <div id="success"></div>
        <button type="submit" class="btn btn-primary" id="sendMessageButton">Submit</button>
      </form>
    </div>
  </div>
</div>
  <hr>

  <!-- Footer -->
<%- include('layouts/footer'); -%>

  <!-- Bootstrap core JavaScript -->
<%- include('layouts/scripts'); -%>
</body>

</html>
