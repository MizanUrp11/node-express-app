<!DOCTYPE html>
<html lang="en">

<%- include('layouts/head'); -%>

<body>

  <!-- Navigation -->
  <%- include('layouts/navbar'); -%>

  <!-- Page Header -->
  <header class="masthead" style="background-image: url('/img/contact-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="page-heading">
            <h1>Add Post</h1>
            <span class="subheading">Add any post you want</span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <form action="/post/store" method="POST" enctype="multipart/form-data">
        <div class="control-group">
          <div class="form-group floating-label-form-group controls">
              <label>Title</label>
              <input name="title" type="text" class="form-control" placeholder="Enter Title" id="title" required data-validation-required-message="Please enter your name.">
              <p class="help-block text-danger"></p>
            </div>
          </div>
          <div class="control-group">
            <div class="form-group floating-label-form-group controls">
              <label for="body">Post Body</label>
              <textarea name="body" rows="5" class="form-control" placeholder="Message" id="body" required
                data-validation-required-message="Please enter message body."></textarea>
<script>
  $("#body").summernote({
    placeholder: 'Hello Bootstrap 5',
    tabsize: 4,
    height: 200
  });
</script>

              <p class="help-block text-danger"></p>
            </div>
          </div>
          <div class="control-group">
            <div class="form-group floating-label-form-group controls">
              <label>Upload Image</label>
              <input name="image" type="file" class="form-control">
              <p class="help-block text-danger"></p>
            </div>
          </div>
          <br>
          <div id="success"></div>
          <button type="submit" class="btn btn-primary" id="sendMessageButton">Submit</button>
        </form>
      </div>
    </div>
  </div>

  <hr>

  <!-- Footer -->
  <%- include('layouts/footer'); -%>

  <!-- Bootstrap core JavaScript -->
  <%- include('layouts/scripts'); -%>

</body>

</html>
